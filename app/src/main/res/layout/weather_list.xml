<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/weatherForecast_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_8dp"
        android:layout_marginVertical="@dimen/spacing_8dp"
        app:cardCornerRadius="@dimen/spacing_4dp"
        app:cardElevation="@dimen/spacing_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_8dp"
        android:layout_marginStart="@dimen/spacing_8dp"
        android:layout_marginTop="@dimen/spacing_8dp"
        android:layout_marginEnd="@dimen/spacing_8dp">

        <TextView
            android:id="@+id/weather_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Weather Date"
            android:layout_weight="2"
            android:textSize="@dimen/font_x14"/>

        <Space
            android:layout_width="@dimen/spacing_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="@dimen/spacing_36dp"
            android:layout_height="@dimen/spacing_36dp"
            android:layout_marginEnd="@dimen/spacing_4dp"
            tools:src="@drawable/abc_vector_test"
            tools:tint="@color/purple_200" />

        <TextView
            android:id="@+id/weather_description"
            android:layout_width="@dimen/spacing_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="@dimen/font_x14"
            android:textColor="@color/black"
            tools:text="Description" />

        <Space
            android:layout_width="@dimen/spacing_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:gravity="right"
            android:id="@+id/weather_temperature"
            android:layout_width="@dimen/spacing_0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_x14"
            android:textColor="@color/black"
            tools:text="17Â°" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>