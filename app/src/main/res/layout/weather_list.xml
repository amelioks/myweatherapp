<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        
        <variable
            name="weather"
            type="com.ameliok.myweatherapp.api.model.Weather" />


        <variable
            name="clickListener"
            type="com.ameliok.myweatherapp.main.WeatherAdapter.OnClickListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_8dp"
        android:layout_marginStart="@dimen/spacing_8dp"
        android:layout_marginTop="@dimen/spacing_8dp"
        android:layout_marginEnd="@dimen/spacing_8dp"
        android:onClick="@{() -> clickListener.onClick(weather)}">

        <TextView
            android:id="@+id/weather_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Weather Date"
            android:layout_weight="2"
            android:textSize="@dimen/font_x14"
            android:text="@{weatherForecast.dtTxt}"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="@dimen/spacing_36dp"
            android:layout_height="@dimen/spacing_36dp"
            android:layout_marginRight="@dimen/spacing_4dp"
            tools:src="@drawable/abc_vector_test"
            tools:tint="@color/purple_200" />

        <TextView
            android:id="@+id/tvWeatherDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="@dimen/font_x14"
            android:textColor="@color/black"
            android:text="@{weather.description}"
            tools:text="Partly Cloudy aaaandanotherlongdescription" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:gravity="right"
            android:id="@+id/tvWeatherTemperature"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_x14"
            android:textColor="@color/black"
            android:text="@{weather.main}"
            tools:text="17Â°" />

    </LinearLayout>

</layout>